<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MCServerStatus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>

        <!-- Button color -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Thanks to Aadam for explaining how to alter FirebaseUI Styles (https://stackoverflow.com/questions/44492655/customize-firebase-ui-auth-android) -->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="android:windowBackground">@drawable/background_tile</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>

        <!-- Button color -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Default global button color thanks to Gabriele Mariotti (https://stackoverflow.com/questions/64400433/android-default-button-color)-->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>
</resources>